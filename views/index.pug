  section#contact.contact.section
    span.section__subtitle Get in touch
    h2.section__title Contact Me
    .contact__container.container.grid
      .contact__content
        h3.contact__title Talk to me
        .contact__info
          .contact__card
            i.bx.bx-mail-send.contact__card-icon
            h3.contact__card-title Email
            span.contact__card-data mail@vaibhavaswal.codes
            a.contact__button(href='mailto:mail@vaibhavaswal.codes' target='_blank')
              | write me 
              i.bx.bx-right-arrow-alt.contact__button-icon
          .contact__card
            i.bx.bxl-snapchat.contact__card-icon
            h3.contact__card-title snapchat
            span.contact__card-data VaibhavAswal
            a.contact__button(href='' target='_blank')
              | write me 
              i.bx.bx-right-arrow-alt.contact__button-icon
          .contact__card
