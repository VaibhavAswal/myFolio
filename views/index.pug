  // =============== ABOUT ===============
  section#about.about.section
    span.section__subtitle My Intro
    h2.section__title About Me
    .about__container.container.grid
      img.about__img(src='assets/img/about.jpg' alt='')
      .about__data
        .about__info
          .about__box
            i.bx.bx-award.about__icon
            h3.about__title Experience
            span.about__subtitle 2+ Years
          .about__box
            i.bx.bx-briefcase-alt.about__icon
            h3.about__title Completed
            span.about__subtitle 5+ Projects
          .about__box
            i.bx.bxl-snapchat.about__icon
            h3.about__title SnapScore
            span.about__subtitle 95,000+
        p.about__description
          | FullStack developer, create endpoint deployable applications with high
          | scalability. Experienced with mongoDB, Express.js, React.js, Node.js, C++,
          | Python, C, JavaScript, Flask, &amp; stackOverflow se CopyPaste krne me.
        a.button(onclick="goTo('contact');") Contact Me
